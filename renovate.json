{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        ":semanticPrefixFixDepsChoreOthers",
        ":ignoreModulesAndTests",
        "group:monorepos",
        "group:recommended",
        "group:allNonMajor",
        "replacements:all",
        "workarounds:all"
    ],
    "schedule": ["before 5am"],
    "prHourlyLimit": 3,
    "prConcurrentLimit": 3,
    "enabledManagers": [
        "composer",
        "npm",
        "dockerfile",
        "circleci",
        "github-actions"
    ],
    "packageRules": [
        {
            "matchUpdateTypes": ["patch", "pin", "digest"],
            "automerge": true
        },
        {
            "matchPackageNames": ["node"],
            "versioning": "node"
        }
    ]
}
